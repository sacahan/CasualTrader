{
    "servers": {
        "casual-market": {
            "command": "uvx",
            "args": [
                "--from",
                "../CasualMarket",
                "casual-market-mcp"
            ]
        },
        "mcp-memory-libsql": {
            "command": "npx",
            "args": [
                "-y",
                "mcp-memory-libsql"
            ],
            "env": {
                "LIBSQL_URL": "file:./memory/knowledge.db"
            }
        }
    }
}
