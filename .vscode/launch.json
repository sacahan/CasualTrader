{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "啟動 Backend Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/run_server.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend",
                "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
            },
            "justMyCode": false,
            "preLaunchTask": "Sync Backend Dependencies",
            "showReturnValue": true,
            "stopOnEntry": false,
            "pythonArgs": [
                "-u"
            ]
        },
        {
            "name": "啟動 Frontend Server",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/frontend"
        }
    ],
    "compounds": [
        {
            "name": "啟動前後端 (Compound)",
            "configurations": [
                "啟動 Backend Server",
                "啟動 Frontend Server"
            ],
            "presentation": {
                "hidden": false,
                "group": "development",
                "order": 1
            }
        }
    ]
}
