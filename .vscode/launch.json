{
    "configurations": [
        {
            "name": "啟動 API Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.api.app:create_app",
                "--factory",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python3",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "justMyCode": false
        },
        {
            "name": "啟動 Frontend (開發模式)",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/frontend"
        },
        {
            "name": "預覽 Frontend (生產模式)",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run build && npm run preview",
            "cwd": "${workspaceFolder}/frontend"
        }
    ]
}
