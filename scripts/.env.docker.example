# CasualTrader Docker Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=sqlite:///app/data/casualtrader.db
# For PostgreSQL: postgresql://user:password@db:5432/casualtrader

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=production
DEBUG=false

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
# Important: Do NOT use "*" in production
CORS_ORIGINS=http://localhost:8000,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# ============================================
# Static Files
# ============================================
STATIC_DIR=/app/static

# ============================================
# AI Models API Keys
# ============================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Claude (optional)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google Gemini (optional)
# GOOGLE_API_KEY=your-google-api-key-here

# DeepSeek (optional)
# DEEPSEEK_API_KEY=your-deepseek-key-here

# ============================================
# Agent Configuration
# ============================================
MAX_AGENTS=10
AGENT_TIMEOUT=300

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# Security (if needed)
# ============================================
# JWT_SECRET_KEY=your-secret-key-here
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Docker Configuration
# ============================================
# Docker image name and tag
DOCKER_IMAGE_NAME=casualtrader
DOCKER_TAG=latest
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=yourusername
# DOCKER_PASSWORD=yourpassword (for CI/CD only, don't store here in production)
